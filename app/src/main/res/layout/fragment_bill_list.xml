    <!--android:text="fragment"/>-->


    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">


        <com.cedulio.sparrow.TriangleView
                android:id="@+id/act_bill_list__tv"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_gravity="center_horizontal"
                app:tr_direction="up"
                app:tr_color="#7ED321"
                />
        <LinearLayout android:layout_width="match_parent" android:layout_height="130dp"
                      android:background="#7ED321" android:orientation="vertical"
                      android:gravity="center">


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="R$ 2.300,00" android:textColor="#FFF"
                      android:textStyle="bold"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Vencimento 15 MAI" android:textColor="#FFF"
                      android:textAppearance="?android:attr/textAppearanceSmall"
                      android:layout_marginTop="10dp"
                    />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:background="#FFF"
                  android:padding="20dp"
                  android:id="@+id/act_bill_list__ln__subheader" android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:gravity="center"
                      android:orientation="vertical"
                      android:id="@+id/frag_bill_list__lb__pagamento_recebido">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="PAGAMENTO RECEBIDO" android:textColor="#7ED321"
                      android:textAppearance="?android:attr/textAppearanceSmall"

                    />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="R$ 1.350,00" android:textColor="#7ED321"
                      android:textStyle="bold"
                    />

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginBottom="10dp"
                      android:orientation="vertical"
                      android:id="@+id/frag_bill_list__ln__fechada">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:orientation="horizontal">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Gastos do mês" android:layout_alignParentLeft="true"
                          android:id="@+id/frag_bill_list__tv__gastos_label"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="R$ 3.398,44" android:layout_alignParentRight="true"
                          android:id="@+id/frag_bill_list__tv__gastos_value"
                          android:textStyle="bold"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Gastos do mês" android:layout_alignParentLeft="true"
                          android:id="@+id/frag_bill_list__tv__nao_pagos_label"
                          android:layout_below="@+id/frag_bill_list__tv__gastos_label"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="R$ 271,28" android:layout_alignParentRight="true"
                          android:id="@+id/frag_bill_list__tv__nao_pagos_value"
                          android:layout_below="@+id/frag_bill_list__tv__gastos_label"
                          android:textStyle="bold"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Juros 7,75%" android:layout_alignParentLeft="true"
                          android:id="@+id/frag_bill_list__tv__juros_label"
                          android:layout_below="@+id/frag_bill_list__tv__nao_pagos_label"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="R$ 271,28" android:layout_alignParentRight="true"
                          android:id="@+id/frag_bill_list__tv__juros_value"
                          android:layout_below="@+id/frag_bill_list__tv__nao_pagos_value"
                          android:textStyle="bold"/>

            </RelativeLayout>


        </LinearLayout>


        <com.beardedhen.androidbootstrap.BootstrapButton
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="GERAR BOLETO"
                android:id="@+id/frag_bill_list__fb__gerar"
                app:bootstrapBrand="danger"
                app:bootstrapSize="lg"
                app:buttonMode="regular"
                app:showOutline="true"
                app:roundedCorners="true"
                />

    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#B6B6B6"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DE 5 MAR ATÉ 5 ABR"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALORES EM R$"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:id="@+id/frag_bill_list__lv__transactions"/>


</LinearLayout>
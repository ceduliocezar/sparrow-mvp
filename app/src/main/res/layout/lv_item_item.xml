<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp">

        <LinearLayout
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">

            <View android:layout_width="3dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@+id/lv_item__line__up"
                  android:background="#cbcbcb"/>

            <View android:layout_width="3dp"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:id="@+id/lv_item__line__down"
                  android:background="#cbcbcb"/>
        </LinearLayout>


        <View android:layout_width="10dp"
              android:layout_height="10dp"
              android:background="@drawable/gray_circle"
              android:layout_centerVertical="true"/>


    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="48dp">

        <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text="00"
                android:layout_alignParentLeft="true"
                android:id="@+id/lv_item__tv__day"
                android:textColor="#B6B6B6"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="MMM"
                android:id="@+id/lv_item__tv__month"
                android:layout_toRightOf="@+id/lv_item__tv__day"
                android:textColor="#B6B6B6"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TITLE"
                android:id="@+id/lv_item__tv__title"
                android:singleLine="true"
                android:layout_toRightOf="@+id/lv_item__tv__month"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#8d8d8d"
                android:layout_toLeftOf="@+id/lv_item__tv__value"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="VALUE"
                android:textColor="#8d8d8d"
                android:id="@+id/lv_item__tv__value"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>


    </RelativeLayout>


</LinearLayout>
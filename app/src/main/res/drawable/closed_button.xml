<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#e0e0e0"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/bill_closed"/>
            <corners
                    android:radius="3dp"/>
            <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                    android:color="#FFF"/>
            <stroke
                    android:width="1dp"
                    android:color="@color/bill_closed"/>
            <corners
                    android:radius="4dp"/>
            <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp"/>
        </shape>
    </item>
</selector>